                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.livroandroid.carros.activity.prefs.ConfiguracoesActivity"
            android:label="Configurações" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.livroandroid.carros.activity.prefs.ConfiguracoesV11Activity"
            android:label="Configurações"
