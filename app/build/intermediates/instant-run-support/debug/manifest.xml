            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/API_KEY" />

        <activity
            android:name="br.com.livroandroid.carros.activity.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar.NavDrawer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.livroandroid.carros.activity.CarroActivity"
            android:parentActivityName="br.com.livroandroid.carros.activity.MainActivity" >
