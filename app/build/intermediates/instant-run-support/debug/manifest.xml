                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.livroandroid.carros.activity.CarrosActivity"
            android:parentActivityName="br.com.livroandroid.carros.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.livroandroid.carros.activity.SiteLivroActivity"
